---
pagination:
  data: collections.posts
  size: 5
  alias: posts
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?display=swap&family=Newsreader:wght@400;500;700;800&family=Noto+Sans:wght@400;500;700;900"
    />
    <title> IA NOTICIAS COYOACAN | Noticias Ultima Hora</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  </head>
  <body style='font-family:Newsreader,"Noto Sans",sans-serif;'>
    <div class="relative flex w-full min-h-screen flex-col bg-white justify-between overflow-x-hidden">
<!-- HEADER -->
<div class="flex items-center bg-white p-4 pb-2 justify-between">
  <!-- Contenedor del logo y título -->
  <div class="flex-1 flex flex-col items-center pl-12">
    <!-- Logo pequeño no intrusivo -->
    <img src="/assets/logo.webp" alt="Logo" class="w-8 h-8 mb-1 object-contain" />
    <!-- Título -->
    <h2 class="text-[#111418] text-lg font-bold text-center">
      IA NOTICIAS COYOACAN
    </h2>
  </div>
  <!-- Botón de menú -->
  <div class="flex w-12 items-center justify-end">
    <button class="cursor-pointer h-12 flex items-center justify-center rounded-lg bg-transparent text-[#111418]">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor">
        <path d="M224,128a8,8,0,0,1-8,8H40a8,8,0,0,1,0-16H216A8,8,0,0,1,224,128ZM40,72H216a8,8,0,0,0,0-16H40a8,8,0,0,0,0,16ZM216,184H40a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16Z"/>
      </svg>
    </button>
  </div>
</div>


      <!-- NAV TABS -->
      <div class="pb-3">
        <div class="flex border-b border-[#dce0e5] px-4 gap-8">
          <a href="/" class="flex flex-col items-center pb-[13px] pt-4 {% if page.url == '/' %}border-b-[#111418] text-[#111418]{% else %}border-b-transparent text-[#637588]{% endif %}">
            <p class="text-sm font-bold">Inicio</p>
          </a>
    <!--
          <a href="/local/" class="flex flex-col items-center pb-[13px] pt-4 {% if page.url | slice(0,7) == '/local/' %}border-b-[#111418] text-[#111418]{% else %}border-b-transparent text-[#637588]{% endif %}">
            <p class="text-sm font-bold">Local</p>
          </a>
          <a href="/national/" class="flex flex-col items-center pb-[13px] pt-4 {% if page.url | slice(0,10) == '/national/' %}border-b-[#111418] text-[#111418]{% else %}border-b-transparent text-[#637588]{% endif %}">
            <p class="text-sm font-bold">National</p>
          </a>
          <a href="/contact/" class="flex flex-col items-center pb-[13px] pt-4 {% if page.url | slice(0,9) == '/contact/' %}border-b-[#111418] text-[#111418]{% else %}border-b-transparent text-[#637588]{% endif %}">
            <p class="text-sm font-bold">Contact</p>
          </a>
          --!>
        </div>
      </div>

      <!-- TÍTULO -->
      <h2 class="text-[#111418] text-[22px] font-bold px-4 pb-3 pt-5">Ultimas Noticias</h2>

      <!-- LOOP DE POSTS -->
      {% for post in posts %}
      <div class="p-4">
        <div class="flex items-stretch justify-between gap-4 rounded-lg">
          <div class="flex flex-col gap-1 flex-[2_2_0px]">
            <p class="text-[#637588] text-sm">{{ post.data.category | capitalize }}</p>
            <a href="{{ post.url }}">
              <p class="text-[#111418] text-base font-bold">{{ post.data.title }}</p>
            </a>
            <p class="text-[#637588] text-sm">{{ post.data.summary }}</p>
          </div>
          {% if post.data.image %}
          <div class="w-full bg-center bg-cover aspect-video rounded-lg flex-1" style="background-image:url('{{ post.data.image }}')"></div>
          {% endif %}
        </div>
      </div>
      {% endfor %}

      <!-- FOOTER NAV MÓVIL -->
      <div class="mt-auto">
        <div class="flex gap-2 border-t border-[#f0f2f4] bg-white px-4 pb-3 pt-2">
          <!-- iconos móviles -->
        </div>
        <div class="h-5 bg-white"></div>
      </div>
    </div>
  </body>
</html>
