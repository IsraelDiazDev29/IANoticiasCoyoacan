<article class="rounded-2xl overflow-hidden border border-slate-200/60 dark:border-slate-800/60 flex flex-col h-full bg-white dark:bg-slate-900 shadow-sm hover:shadow-md transition-shadow">
  <a href="{{ post.url }}" class="block flex-1 group">
    
    <div class="aspect-video relative overflow-hidden bg-slate-100 dark:bg-slate-800">
      
      {# LÓGICA AUTOMÁTICA DE IMAGEN #}
      {% if post.data.cover %}
        <img src="{{ post.data.cover }}" alt="{{ post.data.title }}" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
      
      {% elif post.data.image %}
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
      
      {% elif post.data.youtubeId %}
        <img src="https://img.youtube.com/vi/{{ post.data.youtubeId }}/hqdefault.jpg" alt="{{ post.data.title }}" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
        
        <div class="absolute inset-0 flex items-center justify-center bg-black/20 group-hover:bg-black/10 transition">
             <div class="w-10 h-10 bg-white/90 rounded-full flex items-center justify-center backdrop-blur shadow-lg">
                <svg class="w-5 h-5 text-red-600 ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
             </div>
        </div>

      {% else %}
         <div class="w-full h-full flex items-center justify-center text-slate-400 bg-slate-200 dark:bg-slate-800">
            <span class="text-xs font-medium">Sin imagen</span>
         </div>
      {% endif %}

      {% if post.data.breaking %}
      <span class="absolute top-3 left-3 bg-red-600 text-white text-[10px] font-bold px-2 py-0.5 rounded uppercase tracking-wide shadow-sm">
        ÚLTIMA HORA
      </span>
      {% endif %}
    </div>

    <div class="p-4 space-y-2">
      <h2 class="font-bold text-lg leading-tight text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {{ post.data.title }}
      </h2>
      
      <div class="text-xs text-slate-500 dark:text-slate-400 flex items-center gap-2">
        <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
        {% if post.data.author %}
          <span>· {{ post.data.author }}</span>
        {% endif %}
      </div>
      
      {% if post.data.summary %}
        <p class="text-sm text-slate-600 dark:text-slate-300 line-clamp-2 leading-relaxed">
            {{ post.data.summary }}
        </p>
      {% endif %}
    </div>
  </a>
</article>
