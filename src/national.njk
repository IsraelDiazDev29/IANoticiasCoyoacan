---
layout: layouts/base.njk
title: National
permalink: /national/index.html
pagination:
  data: collections.nationalPosts
  size: 5
  alias: posts
---
<h2 class="text-2xl font-semibold mb-4">National Noticias</h2>
<ul class="space-y-6">
  {% for post in posts %}
  <li>
    <a href="{{ post.url }}" class="block hover:bg-gray-50 p-4 rounded">
      <h3 class="text-xl font-semibold">{{ post.data.title }}</h3>
      {% if post.data.image %}
      <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-48 object-cover rounded mt-2 mb-2">
      {% endif %}
      <p class="text-gray-700">{{ post.data.summary }}</p>
      <p class="text-right text-sm text-gray-400">Leer más →</p>
    </a>
  </li>
  {% endfor %}
</ul>
